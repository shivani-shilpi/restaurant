<div class="container mb-3">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-4 ">
          <div class="card p-3">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              
              <div class="form-group">
                <%= f.label :username, class: "form-label", placeholder: "username" %><br />
                <%= f.text_field :fullname, autofocus: true, class: "form-control", id: "exampleFormControlInput1"  %>
              </div>

              <div class="form-group">
                <%= f.label :contact, class: "form-label", placeholder: "contact"  %><br />
                <%= f.text_field :contact, autofocus: true, class: "form-control", id: "exampleFormControlInput1"  %>
              </div>

              <div class="form-group">
                <%= f.label :email, class: "form-label", placeholder: "email" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleFormControlInput1"  %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: "form-label", placeholder: "password" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "exampleFormControlInput1"  %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: "form-label", placeholder: "password_confirmation" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "exampleFormControlInput1"  %>
              </div>

              <div class="form-group">
                <%= f.label :Profile, class: "form-label", placeholder: "profile" %><br />
                <%= f.file_field :image, autofocus: true, class: "form-control", id: "exampleFormControlInput1"  %>
              </div>

              <div class="form-group mt-3">
                <%= f.label :role, class: "form-label" %>
                <%= f.select :role_ids, Role.pluck(:name),{},{class: "form-control"}%>
              </div>
      
              <div class="actions text-center mt-3">
                <%= f.submit "Sign up", class: "btn btn-primary" %>
              </div>
            <% end %>

            </div>
        </div>
    </div>
</div>         


