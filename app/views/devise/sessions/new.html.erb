<div class="container mb-3">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-4 ">
          <div class="card p-3">
          
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email, class: "form-label", placeholder: "email" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleFormControlInput1" %>
              </div>

              <div class="form-group">
                <%= f.label :password,  class: "form-label", placeholder: "password" %><br />
                <%= f.password_field :password, autocomplete: "current-password",  class: "form-control", id: "exampleFormControlInput1" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
              
                  <div class="actions text-center mt-3">
                    <%= f.submit "Log in", class: "btn btn-primary"%>
                  </div>
               
            <% end %>    
             
          </div>
        </div>
    </div>
</div>         




