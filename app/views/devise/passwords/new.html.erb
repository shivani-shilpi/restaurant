<div class="content">
  <div class="box">
    <div class="header">
      <h2>Forgot your password?</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>        
        <div class="email container">
          <img src="https://storage.googleapis.com/koloicons/png/line/48-origin-size/48/17%20Settings/Account_2.png">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", placeholder: "email" %> <br/>
        </div>
        
        <div class="actions">
          <%= f.submit "Send me reset password instructions" %>
        </div>
      <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
