 
 
    <div class="card mb-3 rounded shadow p-2" style="max-width: 540px;">
        <div class="row justify-content-center">
            <div class="col-2">
                <% if restaurant.image.attached? %>
                    <%= image_tag restaurant.image, height: '80px', width: '80px' %>
                <% else %>
                    <img src="..." class="img-fluid rounded-start" alt="...">
                <% end %>  
            </div>

            <div class="col-6">
                <div class="card-body">
                  
                  <h6><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-reset fw-bold" %></h6>
                
                </div>
            </div>

            <div class="col mt-2">
                <div class="card-body">
                  
                    <%= link_to edit_restaurant_path(restaurant), class: "btn btn-outline-dark mt-2 actions", remote: true do %>
                       <i class="fa-solid fa-pen-clip "></i>
                    <% end %>
                 
                    <%= link_to restaurant, method: :delete, data: { confirm: "Are you sure "}, class: "btn btn-outline-danger mt-2 actions", remote: true do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                 
                </div>
            </div>
        </div>
    </div>
